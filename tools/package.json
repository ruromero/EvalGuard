{
  "name": "evalguard-cli",
  "version": "1.0.0",
  "description": "CLI tool for EvalGuard schema management and validation",
  "main": "dist/index.js",
  "bin": {
    "evalguard": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "binary": "npm run build && pkg dist/index.js --output bin/evalguard --targets node18-macos-x64,node18-linux-x64,node18-win-x64"
  },
  "keywords": [
    "evalguard",
    "cli",
    "schema",
    "validation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "js-yaml": "^4.1.0",
    "json-schema-to-typescript": "^15.0.4"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/js-yaml": "^4.0.8",
    "@types/node": "^20.10.0",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  }
}
